        function goToPage(pageNumber) {
            // تغيير الخلفية حسب الصفحة
            if (pageNumber === 1) {
                document.getElementById("body").style.backgroundImage = "url('https://media.giphy.com/media/qgQUggAC3Pfv687qPC/giphy.gif')";
                document.getElementById("page1").classList.add("active");
                document.getElementById("page2").classList.remove("active");
            } else {
                document.getElementById("body").style.backgroundImage = "url('https://media.giphy.com/media/L1R1tvI9svkIWwpVYr/giphy.gif')";
                document.getElementById("page2").classList.add("active");
                document.getElementById("page1").classList.remove("active");
            }
        }
    </script>
